%br/
.container
  .row
    .col-sm-3
    .col-sm-6
      .card
        .card-header
          .font-weight-bold Change your password
        .card-body
          = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
            = f.hidden_field :reset_password_token
            %fieldset
              .form-group
                .row
                  .col-sm-12
                    = f.password_field :password, icon: "asterisk", hide_label: true, autofocus: true, autocomplete: "off", placeholder: "New Password"
                .row
                  .col-sm-12
                    = f.password_field :password_confirmation, hide_label: true, autocomplete: "off", icon: "asterisk", placeholder: "New Password again"
                = f.submit "Change my password", class: "btn btn-outline-secondary"
              = render "users/shared/links"

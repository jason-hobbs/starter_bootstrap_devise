%br/
.container
  .row
    .col-sm-3
    .col-sm-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title Sign Up
        .panel-body
          = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            %fieldset
              .form-group
                .row
                  .col-sm-12
                    = f.email_field :email, icon: "envelope", hide_label: true, placeholder: "Email Address"
                .row
                  .col-sm-12
                    = f.password_field :password, icon: "asterisk", hide_label: true, placeholder: "Password"
                .row
                  .col-sm-12
                    = f.password_field :password_confirmation, hide_label: true, icon: "asterisk", placeholder: "Password again"
                - if current_user.try(:admin?)
                  .row
                    .col-sm-12
                      = f.check_box :admin
              - if params[:action] == "edit"
                = f.submit "Edit", class: "btn btn-default"
              - else
                = f.submit "Sign Up", class: "btn btn-default"
          = render "users/shared/links"
    .col-sm-3
